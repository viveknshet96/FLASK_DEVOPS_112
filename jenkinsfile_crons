pipeline {
    agent any

    triggers {
        cron('* * * * *')
    }

    stages {

        stage('Checkout Source Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/viveknshet96/FLASK_DEVOPS_112.git'
            }
        }

        stage('Install Dependencies') {
    steps {
        sh '''
        python3 -m venv venv
        . venv/bin/activate
        python -m pip install --upgrade pip
        pip install -r requirements.txt
        '''
    }
}

        stage('Docker Image Build') {
            steps {
                sh 'docker build -t flask-swarm-cron-app:1.0 .'
            }
        }

        stage('Deploy to Docker Swarm') {
            steps {
                sh '''
                docker service rm flask-swarm-cron-service || true

                docker service create \
                  --name flask-swarm-cron-service \
                  -p 5001:5000 \
                  flask-swarm-cron-app:1.0
                '''
            }
        }
    }
}
